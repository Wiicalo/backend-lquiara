<h1>Productos en Tiempo Real</h1>

<div class="product-form-container">
    <h2>Agregar Nuevo Producto</h2>
    <form id="addProductForm">
        <label for="titulo">Título:</label>
        <input type="text" id="titulo" name="titulo" required>

        <label for="descripcion">Descripción:</label>
        <input type="text" id="descripcion" name="descripcion" required>

        <label for="codigo">Código:</label>
        <input type="text" id="codigo" name="codigo" required>

        <label for="precio">Precio:</label>
        <input type="number" id="precio" name="precio" required>

        <label for="cantidad">Cantidad:</label>
        <input type="number" id="cantidad" name="cantidad" required>

        <label for="categoria">Categoría:</label>
        <input type="text" id="categoria" name="categoria" required>

        <button type="submit">Agregar Producto</button>
    </form>

    <h2>Eliminar Producto por ID</h2>
    <form id="deleteProductForm">
        <label for="deleteId">ID del Producto:</label>
        <input type="number" id="deleteId" name="id" required>
        <button type="submit">Eliminar Producto</button>
    </form>
</div>

<h2>Listado de Productos</h2>
<div id="realTimeProductList">
    {{#if products.length}}
        <ul id="productListUl">
            {{#each products}}
                <li>
                    <strong>{{this.titulo}}</strong> (ID: {{this.id}}) - {{this.descripcion}}
                    <br>Precio: ${{this.precio}} | Cantidad: {{this.cantidad}} | Categoría: {{this.categoria}}
                </li>
            {{/each}}
        </ul>
    {{else}}
        <p>No hay productos en tiempo real.</p>
    {{/if}}
</div>

<script src="/socket.io/socket.io.js"></script> 
<script src="/js/realTimeProducts.js"></script> 